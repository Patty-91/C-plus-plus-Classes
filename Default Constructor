#include "pch.h" // This is a Standard Header File, it will help our solution to integrate all of our files
#include <iostream> // This is the Basic input/output library, like the <stdio.h> on C
#include <vector>
#include <cstring>
#include <cctype>
#include <string>
using namespace std;

class Student {

private:
string studentName;
string studentProgram;
int studentID;

public:
//contructor
Student() { //This will replace the default constructor generated by C++ automatically

studentName = { "noName" };
studentID = { 0 };
studentProgram = { "No Program" };

cout << "My custom constructor was called" << endl;

}

//method
string getName() {
return studentName;

}


};


int main() {

Student *andre = new Student();

cout << andre->getName() << endl;



system("pause");
}
