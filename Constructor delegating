#include "pch.h" // This is a Standard Header File, it will help our solution to integrate all of our files
#include <iostream> // This is the Basic input/output library, like the <stdio.h> on C
#include <vector>
#include <cstring>
#include <cctype>
#include <string>
using namespace std;

class Student {

private:
string studentName;
string studentProgram;
int studentID;

public:
//contructor
// : constructor delagating
Student() :Student("noName", "No Program", 0){ //This will replace the default constructor generated by C++ automatically

cout << "My custom constructor was called" << endl;

}

//overloading constructor
Student(string constName, string constProgram, int constID) : studentName{ constName }, studentProgram{constProgram}, studentID{ constID } {

cout << "My overloaded constructor was called" << endl;

}

//method
string getName() {
return studentName;

}

friend std::ostream& operator <<(std::ostream& stream, const Student &obj);
};


// You will learn this in the future, I hope - OPERATOR OVERLOADING
std::ostream& operator <<(std::ostream& stream, const Student &obj) {
stream << "studentName : " << obj.studentName << std::endl
<< "studentProgram : " << obj.studentProgram << std::endl
<< "studentID : " << obj.studentID << std::endl;
return stream;
}

int main() {


Student *andre = new Student();


cout << *andre << endl;


Student *newStudent = new Student("Saygin", "IT", 100);

cout << *newStudent << endl;


system("pause");
}
